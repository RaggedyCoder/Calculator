<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:elevation="4dip"
    android:gravity="bottom">

    <com.betelgeuse.calculator.ui.widget.view.CalculatorEditText
        android:id="@+id/formulaEditText"
        style="@style/DisplayEditTextStyle.Formula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:inputType="text|textNoSuggestions"
        android:textColor="@color/display_formula_text_color"
        tools:text="2+2" />

    <com.betelgeuse.calculator.ui.widget.view.CalculatorEditText
        android:id="@+id/resultEditText"
        style="@style/DisplayEditTextStyle.Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formulaEditText"
        android:focusable="false"
        android:inputType="none"
        android:textColor="@color/display_result_text_color"
        tools:text="4" />
</RelativeLayout>